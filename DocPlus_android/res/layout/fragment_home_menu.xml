<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_frag_home_left_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:clickable="true"
    android:orientation="horizontal"
     >

    <RelativeLayout
        android:id="@+id/menu_close_menu_view"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:visibility="gone"
         >
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:alpha="0.8"
                android:layout_marginRight="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="40dp" >

                <FrameLayout
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                     >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rectangle_head"
                        android:padding="1dp" >

                        <ImageView
                            android:id="@+id/iv_home_menu_head"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:scaleType="fitXY" />

                        <View
                            android:id="@+id/v_menu_head_btn"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:background="@drawable/selector_rectangle_head_bg"
                            android:onClick="onHeadClick" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_rectangle_state"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|right"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_home_head_v"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_home_menu_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Rainbow"
                    android:textColor="@color/menu_text"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医加号"
                        android:textColor="@color/app_emerald"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_home_menu_plus_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@drawable/selector_btn_dpnum_not_setting_text"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_menu_my_twocode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/selector_btn_menu_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/home_right_menu_icon_wdith"
                        android:layout_height="@dimen/home_right_menu_icon_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                        android:src="@drawable/icon_home_my_twocode" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:text="我的二维码"
                        android:textColor="#EB6100"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/img_home_menu_mycode_arrows"
                        android:layout_width="@dimen/setting_arrow_image_width"
                        android:layout_height="@dimen/setting_arrow_image_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/selector_image_setting_arrowright" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/item_light_green" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <!-- 临床数据库 -->

                        <LinearLayout
                            android:id="@+id/menu_clinic_db"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/menu_clinic_db" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="临床数据"
                                android:textColor="@color/menu_text"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <!-- 病历管理 -->
                        <!-- 以前的识别管理 -->

                        <LinearLayout
                            android:id="@+id/menu_patient_manager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/icon_home_medical_library" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="云病例库"
                                android:textColor="@color/menu_text"
                                android:textSize="@dimen/home_right_menu_text_size" />

                            <ImageView
                                android:layout_width="@dimen/setting_arrow_image_width"
                                android:layout_height="@dimen/setting_arrow_image_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30dp"
                                android:src="@drawable/selector_image_setting_arrowright" />
                        </LinearLayout>

                        <!-- 提醒 -->

                        <LinearLayout
                            android:id="@+id/menu_remind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/icon_home_follow_up" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="随访"
                                android:textColor="@color/menu_text"
                                android:textSize="@dimen/home_right_menu_text_size" />

                            <ImageView
                                android:layout_width="@dimen/setting_arrow_image_width"
                                android:layout_height="@dimen/setting_arrow_image_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30dp"
                                android:src="@drawable/selector_image_setting_arrowright" />
                        </LinearLayout>

                        <!-- 设置 -->

                        <LinearLayout
                            android:id="@+id/menu_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/icon_home_setting" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="设置"
                                android:textColor="@color/menu_text"
                                android:textSize="@dimen/home_right_menu_text_size" />

                            <ImageView
                                android:layout_width="@dimen/setting_arrow_image_width"
                                android:layout_height="@dimen/setting_arrow_image_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30dp"
                                android:src="@drawable/selector_image_setting_arrowright" />
                        </LinearLayout>

                        <!-- 通讯录 -->

                        <LinearLayout
                            android:id="@+id/menu_contacts_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/icon_home_contact" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="联系人"
                                android:textColor="@color/menu_text"
                                android:textSize="@dimen/home_right_menu_text_size" />

                            <ImageView
                                android:layout_width="@dimen/setting_arrow_image_width"
                                android:layout_height="@dimen/setting_arrow_image_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30dp"
                                android:src="@drawable/selector_image_setting_arrowright" />
                        </LinearLayout>

                        <!-- 推荐给朋友 -->

                        <LinearLayout
                            android:id="@+id/menu_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/icon_home_recommend" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="分享"
                                android:textColor="@color/menu_text"
                                android:textSize="@dimen/home_right_menu_text_size" />

                            <ImageView
                                android:layout_width="@dimen/setting_arrow_image_width"
                                android:layout_height="@dimen/setting_arrow_image_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30dp"
                                android:src="@drawable/selector_image_setting_arrowright" />
                        </LinearLayout>
                        
                        <LinearLayout
                            android:id="@+id/menu_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_menu_bg"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/home_right_menu_icon_padding_bottom"
                            android:paddingTop="@dimen/home_right_menu_icon_padding_top" >

                            <ImageView
                                android:layout_width="@dimen/home_right_menu_icon_wdith"
                                android:layout_height="@dimen/home_right_menu_icon_height"
                                android:layout_marginLeft="@dimen/home_right_menu_icon_margin_left"
                                android:src="@drawable/icon_home_data" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/home_right_menu_text_margin_left"
                                android:layout_weight="1"
                                android:text="数据可视化(Demo)"
                                android:textColor="@color/menu_text"
                                android:textSize="@dimen/home_right_menu_text_size" />

                            <ImageView
                                android:layout_width="@dimen/setting_arrow_image_width"
                                android:layout_height="@dimen/setting_arrow_image_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30dp"
                                android:src="@drawable/selector_image_setting_arrowright" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

              <!--   <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/app_gray" /> -->
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_menu_arrows"
            android:layout_width="12dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/arrow_right_red"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>