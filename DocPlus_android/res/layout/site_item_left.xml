<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_hospital_itme"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_general_content_trans_bg">
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
	<TextView 
	    android:id="@+id/tv_btn_list_text"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/item_info_height"
	    android:layout_marginLeft="3dp"
	    android:textColor="@color/text_hosp_item_normal"
	    android:textSize="14sp"
	    android:singleLine="true"
	    android:gravity="left|center_vertical"
	    android:ellipsize="end"
	    />
	
	<View 
	    android:id="@+id/v_select_sign"
	    android:layout_width="6dp"
	    android:layout_height="12dp"
	    android:layout_gravity="right|center_vertical"
	    android:background="@drawable/selector_image_setting_arrowright"
	    android:layout_marginRight="20dp"
	    android:visibility="gone"/>
</FrameLayout>
