<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/setbkg_emerald"
        android:padding="1dp" >

        <ImageView
            android:id="@+id/patient_friend_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shape_rectangle_head" />
    </FrameLayout>

    <TextView
        android:id="@+id/name_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" 
        android:layout_marginTop="30dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:scrollbars="none">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:textSize="16sp"
                android:textColor="#838383"/>
        </ScrollView>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_whitetotran_down"/>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_whitetotran_up"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" />

    <Button
        android:id="@+id/btn_look_patient"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="查看病案"
        android:textColor="@drawable/selector_text_look_medical_record"
        android:textSize="20sp" />

    <View
        android:id="@+id/line"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/app_emerald" />

</LinearLayout>