<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >

        <LinearLayout
            android:id="@+id/linearblew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp" >

                <FrameLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_ovl_remind_bg" >

                    <TextView
                        android:id="@+id/msg_blew_ten"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </FrameLayout>
            </FrameLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.8" />
        </LinearLayout>

        <FrameLayout
             android:id="@+id/linearabove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/remind_time_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014/11/18 15:30 PM"
                android:textColor="#553f3b3a"
                android:textSize="12sp" />

            <LinearLayout
               
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:background="#333f3b3a" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_rectangle_remind_bg" >

                    <TextView
                        android:id="@+id/msg_above_ten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </FrameLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:background="#333f3b3a" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/linearcirlce"
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:id="@+id/remind_time_blew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014/11/18 15:30 PM"
                android:textColor="#553f3b3a"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="0.2"
                    android:background="#333f3b3a" />

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="30dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="11dp"
                        android:background="@drawable/item_remind_circle" />
                </FrameLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="0.8"
                    android:background="#333f3b3a" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/remind_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon" />

        <TextView
            android:id="@+id/remind_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="Jack"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摘要提醒:"
            android:textColor="#993f3b3a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/remind_detail_msg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="一个仰慕你很久的患者adafafadadadad"
            android:textColor="#553f3b3a"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>