<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_oval_head"
            android:padding="1dp" >

            <com.hp.android.halcyon.widgets.CircleImageView
                android:id="@+id/head_image"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/setting_line_color" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_share_check_friend"
        android:layout_width="50dp"
        android:layout_height="50dp" >

        <CheckBox
            android:id="@+id/ckb_contacts_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_ckb_select_contacts"
            android:button="@null" />
    </FrameLayout>

</LinearLayout>