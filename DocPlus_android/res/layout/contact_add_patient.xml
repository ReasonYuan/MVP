<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/app_pink" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#333333" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
             >

            <Button
                android:id="@+id/money_accept"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/selector_btn_emerald_bg"
                android:textColor="@drawable/selector_btn_white_text"
                android:text="收费"
                android:textSize="30sp" />

            <Button
                android:id="@+id/free_accept"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/selector_btn_green_bg"
                android:textColor="@drawable/selector_btn_white_text"
                android:text="免费"
                android:textSize="30sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>