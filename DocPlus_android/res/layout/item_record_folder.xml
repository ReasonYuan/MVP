<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_record_unrecong_count"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="47.3dp"
        android:background="@drawable/home_medical_library_num"
        android:gravity="center"
        android:textColor="#DADFDB"
        android:textSize="9sp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp" >

        <ImageView
            android:id="@+id/img_item_record_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_img_record_normal" />

        <LinearLayout
            android:id="@+id/ll_record_folder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_tv_record_folder_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_record_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="3dp"
                        android:maxWidth="100dp"
                        android:textColor="@color/app_emerald"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/record_from_cutline"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:background="#B5B5B5"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/item_record_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#b5b5b5"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_record_overview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#BCE1DA"
                android:gravity="center"
                android:text="概览"
                android:textColor="@color/app_emerald"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_img_record_type"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </FrameLayout>

</FrameLayout>