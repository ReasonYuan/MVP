<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/item_divider_margin_lr"
        android:text="全部"
        android:textColor="#9C9C9C"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_general_border_h"
        android:background="@color/item_general_divider_line"/>
    
    <ListView 
        android:id="@+id/lv_city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000"
        android:dividerHeight="@dimen/item_general_border_h"
        android:divider="@color/item_general_border_deep"/>
    

</LinearLayout>
