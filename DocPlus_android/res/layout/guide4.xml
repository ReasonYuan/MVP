<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dd62c0b4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/title"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/yijia"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/yaoqing"
            android:visibility="invisible" />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/cloud2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="30dp"
                android:src="@drawable/yun4"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/cloud3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="top|right"
                android:src="@drawable/yun6"
                android:visibility="invisible"  />

            <ImageView
                android:id="@+id/cloud1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/yun5"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </FrameLayout>

        <ImageButton
            android:id="@+id/start_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/qihang"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/feiji"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/feiji"
        android:visibility="invisible" />

</FrameLayout>