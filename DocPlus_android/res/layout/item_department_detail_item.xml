<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/item_department_detail_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_divide"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_tag_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_item_general_content_trans_bg"
        android:clickable="true"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_oval_head"
            android:padding="1dp" >

            <com.hp.android.halcyon.widgets.CircleImageView
                android:id="@+id/img_item_department_detail_head"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_item_department_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:alpha="0.8"
            android:text="Jack"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_general_border_h"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="#00000000" />

    <View
        android:id="@+id/item_department_detail_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_divide"
        android:visibility="gone" />

</LinearLayout>