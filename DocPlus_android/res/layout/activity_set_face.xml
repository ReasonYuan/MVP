<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_me_face"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_general_border_h"
        android:layout_marginTop="@dimen/item_margin_top"
        android:background="@color/item_general_divider_line" />

    <!-- 头像 -->

    <RelativeLayout
        android:id="@+id/rl_setface_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_info_item_bg"
        android:paddingLeft="@dimen/item_divider_margin_lr"
        android:paddingRight="@dimen/item_divider_margin_lr" >

        <ImageView
            android:id="@+id/iv_icon_set_face_head"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_head" />

        <TextView
            android:id="@+id/tv_setface_face_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_icon_set_face_head"
            android:text="@string/personal_info_face" />

        <ImageView
            android:id="@+id/iv_setface_face_arrowright"
            android:layout_width="@dimen/image_arrow_right_width"
            android:layout_height="@dimen/image_arrow_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_blue" />

        <com.hp.android.halcyon.widgets.RoundImageView
            android:id="@+id/iv_setface_face"
            android:layout_width="@dimen/face_imageview_width"
            android:layout_height="@dimen/face_imageview_height"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/item_general_padding_r"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/iv_setface_face_arrowright"
            android:padding="@dimen/activity_general_padding"
            android:src="@drawable/default_head" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_general_border_h"
        android:background="@color/item_general_divider_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_general_border_h"
        android:layout_marginTop="@dimen/item_margin_top"
        android:background="@color/item_general_divider_line" />

    <!-- 姓名 -->

    <RelativeLayout
        android:id="@+id/rl_setface_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="@dimen/item_personal_info_padding_b"
        android:paddingLeft="@dimen/item_divider_margin_lr"
        android:paddingRight="@dimen/item_divider_margin_lr"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_setface_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/personal_info_name" />

        <ImageView
            android:id="@+id/iv_setface_name_arrowright"
            android:layout_width="@dimen/image_arrow_right_width"
            android:layout_height="@dimen/image_arrow_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_blue" />

        <TextView
            android:id="@+id/tv_setface_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_general_padding_r"
            android:layout_marginLeft="80dp"
            android:layout_toLeftOf="@id/iv_setface_name_arrowright"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#4394D0" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_general_border_h"
        android:background="@color/item_general_divider_line" />

</LinearLayout>