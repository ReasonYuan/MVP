<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
        <solid android:color="@color/item_general_bg_pressed" />
            <stroke android:width="@dimen/item_general_border_h" android:color="@color/item_user_profile_border" />
            <corners android:radius="8dp" />
            </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/item_general_bg_normal" />
            <stroke android:width="@dimen/item_general_border_h" android:color="@color/item_user_profile_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</selector>
