<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/topbar_bg_pressed" />
            <corners android:bottomLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/topbar_bg_normal" />
    		<corners  android:topRightRadius="8dp" android:bottomLeftRadius="8dp"/>
        </shape>
    </item>
</selector>